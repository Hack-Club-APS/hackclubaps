---
import Icon from "./icons.astro";
import { buildInfo } from "@/data/generateBuildInfo";
const version = buildInfo.version;
const commit = buildInfo.commit;
---

<footer
    class="bg-[#121217] text-slate-500 py-12 px-4 border-t border-slate-900"
>
    <div
        class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-6"
    >
        <div class="flex items-center gap-3">
            <div class="bg-[#17171D] p-2 rounded-md">
                <Icon glyph="terminal" color="currentColor" size={32} />
            </div>
            <div>
                <p
                    class="text-slate-300 font-bold hover:text-[#ec3750] transition-colors"
                >
                    Hack Club @ APS
                </p>
                <span class="text-sm">Built by</span>
                <a
                    href="https://github.com/jaydev-1510"
                    class="text-sm text-slate-300 hover:underline hover:decoration-wavy">@Jaydev</a
                >
                <span class="text-sm">with Astro & Tailwind</span>
            </div>
        </div>

        <div class="flex gap-6">
            <a
                href="mailto:hackclubaps@gmail.com"
                class="flex items-center gap-2 hover:text-[#ec3750] transition-colors"
            >
                <Icon glyph="email" color="currentColor" size={24} />
                <span>Contact</span>
            </a>
            <a
                href="https://hackclub.slack.com"
                class="flex items-center gap-2 hover:text-[#ec3750] transition-colors"
            >
                <Icon glyph="slack" color="currentColor" size={24} />
                <span>Slack</span>
            </a>
            <a
                href="https://github.com/hack-club-aps"
                class="flex items-center gap-2 hover:text-[#ec3750] transition-colors"
            >
                <Icon glyph="github" color="currentColor" size={24} />
                <span>Team</span>
            </a>
            <a
                href="https://hackclub.com"
                class="flex items-center gap-2 hover:text-[#ec3750] transition-colors"
            >
                <Icon glyph="external" color="currentColor" size={24} />
                <span>HQ</span>
            </a>
        </div>
    </div>
    <div
        class="max-w-6xl flex flex-col md:flex-row mx-auto mt-8 mb-10 text-center md:text-left text-sm text-slate-700"
    >
        <p>
            This website is open source. Hack Club is a global network of high
            school hackers.
        </p>
        <p
            class="mt-8 md:mt-0 text-center md:ml-auto hover:text-slate-300 transition-colors"
            title="Version • Commit hash"
        >
            v{version} • {commit}
        </p>
    </div>
</footer>
