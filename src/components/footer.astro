---
import { Terminal, MessageSquare, ExternalLink, Github} from "lucide-astro";
---

<footer
  class="bg-[#121217] text-slate-500 py-12 px-4 border-t border-slate-900"
>
  <div
    class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-6"
  >
    <div class="flex items-center gap-3">
      <div class="bg-slate-800 p-2 rounded-md">
        <Terminal size={20} class="text-[#8492a6]" />
      </div>
      <div>
        <p class="text-slate-300 font-bold hover:text-[#ec3750] transition-colors">Hack Club @ APS</p>
        <span class="text-sm">Built by</span>
        <span class="text-sm text-slate-300"> <a href="https://github.com/jaydev-1510">@Jaydev</a></span>
        <span class="text-sm">with Astro & Tailwind</span>
      </div>
    </div>

    <div class="flex gap-6">
      <a
        href="https://hackclub.slack.com"
        class="flex items-center gap-2 hover:text-[#ec3750] transition-colors"
      >
        <MessageSquare size={18} />
        <span>Slack</span>
      </a>
      <a
        href="https://github.com/hack-club-aps"
        class="flex items-center gap-2 hover:text-[#ec3750] transition-colors"
      >
        <Github size={18} />
        <span>Team</span>
      </a>
      <a
        href="https://hackclub.com"
        class="flex items-center gap-2 hover:text-[#ec3750] transition-colors"
      >
        <ExternalLink size={18} />
        <span>HQ</span>
      </a>
    </div>
  </div>
  <div
    class="max-w-6xl mx-auto mt-8 text-center md:text-left text-sm text-slate-700"
  >
    <p>
      This website is open source. Hack Club is a global network of high school
      hackers.
    </p>
  </div>
</footer>
