---
import { Code, Cpu, Zap } from "lucide-astro";
const activities = [
    {
        icon: Code,
        title: "Workshops",
        desc: "Guided sessions where we learn new languages, frameworks, and tools. From Python to React to Game Dev.",
        color: "bg-blue-100 text-blue-600",
    },
    {
        icon: Cpu,
        title: "Hardware",
        desc: "We don't just do software. We mess with Arduinos, soldering, and building physical gadgets.",
        color: "bg-orange-100 text-orange-600",
    },
    {
        icon: Zap,
        title: "Hackathons",
        desc: "We participate in global Hack Club events and host our own internal project jams.",
        color: "bg-purple-100 text-purple-600",
    },
];
---

<section
    id="activities"
    class="py-24 bg-slate-50 dark:bg-[#121217] transition-colors"
>
    <div class="max-w-6xl mx-auto px-4">
        <div class="text-center mb-16">
            <h2
                class="text-3xl md:text-5xl font-bold text-slate-900 dark:text-white mb-4 transition-colors"
            >
                What happens at Hack Club?
            </h2>
            <p
                class="text-lg text-slate-600 dark:text-slate-400 transition-colors"
            >
                We meet weekly to build, learn, and share.
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            {
                activities.map((item) => (
                    <div class="animate-box bg-white dark:bg-[#252429] border border-slate-100 dark:border-[#8492a680] shadow-xl shadow-slate-200/50 dark:shadow-[#8492a650]/50 p-8 rounded-2xl hover:shadow-2xl hover:scale-105 transition-all duration-300">
                        <div
                            class={`w-14 h-14 rounded-xl flex items-center justify-center mb-6 ${item.color}`}
                        >
                            <item.icon size={32} />
                        </div>
                        <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-3 transition-colors">
                            {item.title}
                        </h3>
                        <p class="text-slate-600 dark:text-slate-400 leading-relaxed transition-colors">
                            {item.desc}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
