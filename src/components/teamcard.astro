---
import { Github, Slack } from "lucide-react";

const { name, role, bio, color, icon, darkMode } = Astro.props;
---

<div
  class={`group relative w-full sm:w-72 p-6 rounded-2xl ${darkMode ? "bg-slate-800 border-slate-700" : "bg-white border-slate-100"} border shadow-xl hover:-translate-y-2 transition-all duration-300`}
>
  <!-- Avatar -->
  <div
    class={`w-24 h-24 mx-auto rounded-full ${color} mb-6 flex items-center justify-center text-5xl border-4 ${darkMode ? "border-slate-700" : "border-white"} shadow-md group-hover:scale-110 transition-transform duration-300`}
  >
    {icon}
  </div>

  <!-- Content -->
  <div class="text-center">
    <h3
      class={`text-xl font-bold ${darkMode ? "text-white" : "text-slate-900"} mb-1`}
    >
      {name}
    </h3>

    <div
      class="inline-block px-3 py-1 rounded-full bg-[#ec3750]/10 text-[#ec3750] text-xs font-bold uppercase tracking-wide mb-3"
    >
      {role}
    </div>

    <p
      class={`text-sm ${darkMode ? "text-slate-400" : "text-slate-600"} leading-relaxed`}
    >
      {bio}
    </p>
  </div>

  <!-- Social Links -->
  <div
    class="flex justify-center gap-3 mt-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300 transform translate-y-2 group-hover:translate-y-0"
  >
    <button class="text-slate-400 hover:text-[#ec3750]"
      ><Github size={18} /></button
    >
    <button class="text-slate-400 hover:text-[#ec3750]"
      ><Slack size={18} /></button
    >
  </div>
</div>
