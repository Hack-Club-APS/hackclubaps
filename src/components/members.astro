---
import { Github, Slack } from 'lucide-react';
import teamMembers from '@/data/members.json';
---

<section id="members" class="py-24 bg-white dark:bg-[#17171D] -translate-y-20">
    <h1 class="text-4xl font-bold mb-8 text-center">Club Members</h1>
    <div class="container grid grid-cols-1 gap-8 sm:grid-cols-2 justify-center mx-auto px-4">
        {teamMembers.map((member) => (
          <div key={member.id} class="p-4 flex flex-col items-center w-full h-25px rounded-2xl bg-white dark:bg-[#252429] border border-slate-100 dark:border-slate-700 shadow-xl hover:-translate-y-2 transition-all duration-300">
              <div class={`w-24 h-24 mx-auto rounded-full bg-[${member.color}] mb-6 flex items-center justify-center text-5xl border-4 border-white dark:border-slate-700 shadow-md group-hover:scale-110 transition-transform duration-300`}>
                {member.pfp}
              </div>
            <h3 class="text-xl font-bold mb-2">{member.name}</h3>
            <div class="flex space-x-4">
              {member.github && <a href={member.github} target="_blank" rel="noopener noreferrer"><Github class="w-6 h-6 text-gray-600 dark:text-gray-400" /></a>}
              {member.slack && <a href={member.slack} target="_blank" rel="noopener noreferrer"><Slack class="w-6 h-6 text-gray-600 dark:text-gray-400" /></a>}
            </div>
          </div>
        ))}
    </div>
</section>
